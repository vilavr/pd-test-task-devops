{
  "name": "pd-test-task-devops",
  "version": "1.0.0",
  "description": "Pipedrive API Integration Task",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "coverage:nyc": "nyc --reporter=html --reporter=json-summary --reporter=text-summary jest"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "@octokit/action": "^7.0.0",
    "@octokit/rest": "^21.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jest-coverage-badges": "^1.0.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^5.1.1",
    "@vitest/coverage-v8": "^2.0.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-json-reporter": "^1.2.2",
    "node-mocks-http": "^1.15.1",
    "nyc": "^17.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "typescript": "^5.3.2",
    "vite": "^5.3.5",
    "vitest": "^2.0.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**"
    ],
    "reporter": [
      "text",
      "text-summary",
      "json-summary",
      "lcov"
    ],
    "all": true,
    "extension": [
      ".ts"
    ],
    "cache": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  }
}
